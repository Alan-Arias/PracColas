//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "UPrincipal.h"
#include "UCola.cpp"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
Cola Q;

//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	if (Q.Vacia())
		ShowMessage("La Cola está vacía");
	else
		ShowMessage("La Cola no está vacía");
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	if (Q.Llena())
		ShowMessage("La Cola está llena");
	else
		ShowMessage("La Cola no está llena");
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button3Click(TObject *Sender)
{
	Tipo val = StrToInt(InputBox("Entrada","Ingrese valor: ","0"));
	Q.Meter(val);
	Edit1->Text = Q.toString();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button4Click(TObject *Sender)
{
	Tipo x;
	Q.Sacar(x);
	ShowMessage("El elemento extraido es: "+IntToStr(x));
	Edit1->Text=Q.toString();
}
//---------------------------------------------------------------------------
